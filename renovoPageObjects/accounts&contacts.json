{
    "component": "Account&ContactCreation",
    "elements": [
      {
        "name": "myIframe",
        "public": true,
        "type": "frame",
        "selector": {
          "locator": "<locator-for-iframe>",
          "type": "css" // or "xpath", "id", "accessid" based on how you locate the iframe
        },
        "elements": [
          {
            "name": "radioButton",
            "public": true,
            "type": "element",
            "selector": {
              "locator": "//label[@for='radio-0-0']//span[@class='slds-radio_faux']",
              "type": "xpath"
            },
            "methods": [
              {
                "name": "select",
                "compose": [
                  {
                    "element": "radioButton",
                    "action": "click"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
  